datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}
model Thread {
  id              String    @id
  threadPostTitle String? @db.LongText
  author          String?
  messages        Message[]

  @@fulltext([threadPostTitle])
}

model Message {
  id        String  @id
  author    String
  userID    String
  content   String @db.LongText
  timestamp String
  threadID  String
  thread    Thread  @relation(fields: [threadID], references: [id])
  emojis    Emoji[]
  images    Image[]

  @@index([threadID])
  @@fulltext([content])
}

model Emoji {
  id         String   @id
  animated   Boolean
  name       String?
  identifier String
  messageID  String
  message    Message  @relation(fields: [messageID], references: [id])

  @@index([messageID])
}

model Image {
  id        String   @id
  url       String   @db.LongText
  messageID String
  message   Message  @relation(fields: [messageID], references: [id])

  @@index([messageID])
}